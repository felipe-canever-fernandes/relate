<Window x:Class="Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="RELATE" Height="450" Width="800" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        MinWidth="250" MinHeight="300"
        d:Width="{Binding RelativeSource={RelativeSource Mode=Self}, Path=MinWidth}"
        d:Height="{Binding RelativeSource={RelativeSource Mode=Self}, Path=MinHeight}"
        Loaded="Window_Loaded">
    <StackPanel>
        <GroupBox Header="Filter">
            <TextBox x:Name="Filter" />
        </GroupBox>
        <GroupBox Header="Entries">
            <ListView ItemsSource="{Binding Entries}" />
        </GroupBox>
    </StackPanel>
</Window>
