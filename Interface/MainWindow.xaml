<Window x:Class="Interface.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Interface"
		mc:Ignorable="d"
        
		d:Height="{Binding RelativeSource={RelativeSource Mode=Self}, Path=MinHeight}"
		d:Width="{Binding RelativeSource={RelativeSource Mode=Self}, Path=MinWidth}"
        Height="450"
        MinHeight="300"
		MinWidth="250"
        SizeToContent="WidthAndHeight"
		Title="RELATE"
        Width="800"
		WindowStartupLocation="CenterScreen"
        >
	<StackPanel Margin="1">
		<GroupBox Header="Filter" Margin="1">
            <Grid Margin="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                         Margin="1"
                         TextChanged="Filter_TextChanged"
                         x:Name="Filter"
                         />
                <Button Grid.Column="1" Margin="1">
                    Create entry
                </Button>
            </Grid>
        </GroupBox>
		<GroupBox Header="Entries" Margin="1">
            <ListView ItemsSource="{Binding Entries}" Margin="1"/>
		</GroupBox>
	</StackPanel>
</Window>
